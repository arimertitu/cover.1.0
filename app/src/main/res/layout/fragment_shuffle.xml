<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biocolor"
    tools:context="com.example.project.myapplication.ShuffleFragment">

    <LinearLayout
        android:id="@+id/linear1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Online Users"
            android:layout_marginTop="50dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtOnlineUser"
            android:text=""
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />



        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnShuffle"
            android:layout_marginTop="100dp"
            android:text="Shuffle"
            android:layout_marginBottom="8dp"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:background="@drawable/round_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_below="@id/linear1"
        android:weightSum="2"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtLocation"
            android:textColor="@color/colorPrimaryDark"
            android:text="Your Location"
            android:textSize="24sp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnSelectLocation"
            android:text="Customize Location"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/button_style_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </LinearLayout>
    
    
























</RelativeLayout>